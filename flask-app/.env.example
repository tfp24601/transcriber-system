# Transcriber System Configuration

# =============================================================================
# API KEYS (Optional - only needed if using respective backends)
# =============================================================================

# HuggingFace Token - Required for local diarization (pyannote)
# Get token from: https://huggingface.co/settings/tokens
# Also accept terms at:
#   - https://huggingface.co/pyannote/speaker-diarization-3.1
#   - https://huggingface.co/pyannote/speaker-diarization-community-1
HF_TOKEN=

# OpenAI API Key - Required for OpenAI backend
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# AssemblyAI API Key - Required for AssemblyAI backend
# Get from: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=

# =============================================================================
# WHISPER CONFIGURATION (Local Backend)
# =============================================================================

# Default Whisper model (tiny, base, small, medium, large-v2, large-v3)
WHISPER_MODEL=small

# Available models in dropdown (comma-separated)
WHISPER_AVAILABLE_MODELS=tiny,base,small,medium,large-v2

# Default device (cpu, cuda)
WHISPER_DEVICE=cpu

# GPU device when GPU is enabled
WHISPER_GPU_DEVICE=cuda

# Compute type for CPU (float32, int8, int8_float32)
WHISPER_CPU_COMPUTE_TYPE=float32

# Compute type for GPU (float16, int8_float16, int8)
WHISPER_GPU_COMPUTE_TYPE=float16

# Default GPU usage (auto, true, false)
WHISPER_DEFAULT_USE_GPU=auto

# Enable Voice Activity Detection (true/false)
WHISPER_VAD=true

# Default beam size (higher = more accurate but slower)
WHISPER_BEAM_SIZE=5

# Default temperature (0.0 = deterministic)
WHISPER_TEMPERATURE=0.0

# Default language (auto for auto-detection)
WHISPER_DEFAULT_LANGUAGE=auto

# Enable cuDNN for faster GPU processing (0 or 1)
# Only enable if you have cuDNN 9.x installed
CT2_USE_CUDNN=0

# =============================================================================
# DIARIZATION CONFIGURATION
# =============================================================================

# Enable on-demand local diarization (true/false)
ENABLE_ONDEMAND_DIARIZATION=true

# Diarization model (default is latest)
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1

# Default speaker range
MIN_SPEAKERS=1
MAX_SPEAKERS=10

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask host (0.0.0.0 to listen on all interfaces)
FLASK_HOST=0.0.0.0

# Flask port
FLASK_PORT=5000

# Flask debug mode (true/false)
FLASK_DEBUG=false

# Asset cache busting version (leave empty for auto-timestamp)
FLASK_ASSET_VERSION=

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Directory for transcription outputs
TRANSCRIPTION_OUTPUT_DIR=./transcriptions

# =============================================================================
# AUTHENTICATION (Optional - for Cloudflare Access or similar)
# =============================================================================

# Require authenticated user header (true/false)
TRANSCRIBER_REQUIRE_AUTH=false

# Header containing user identity (for Cloudflare Access)
TRANSCRIBER_USER_HEADER=CF-Access-Authenticated-User-Email

# Alternative user header
TRANSCRIBER_ALT_USER_HEADER=X-Transcriber-User

# Default user identifier when no auth is required
TRANSCRIBER_DEFAULT_USER=shared
