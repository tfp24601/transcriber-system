# Transcriber System Environment Variables
# Copy to .env and fill in your values

# Hugging Face Token (required for WhisperX diarization models)
# Get from https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_hf_token_here

# PostgreSQL connection (should match your main docker-compose.yml)
POSTGRES_PASSWORD=your_postgres_password

# Optional: Custom model settings
ASR_MODEL=large-v3
WHISPERX_MODEL=large-v3

# Optional: Upload limits
MAX_UPLOAD_SIZE_GB=10
MAX_DURATION_MINUTES=180

# Optional: Processing timeouts
TRANSCRIPTION_TIMEOUT_MINUTES=30
DIARIZATION_TIMEOUT_MINUTES=15